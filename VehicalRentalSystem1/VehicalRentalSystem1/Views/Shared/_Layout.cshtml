
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] VehicalRentalSystem1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VehicalRentalSystem1.styles.css" asp-append-version="true" />
    <style>
        .faint-blue-button {
            background-color: #e6f2ff;
            color: #007bff;
            border-color: #007bff; 
        }

        .collapse navbar-collapse {
            display: flex;
            justify-content: flex-end;
            margin-left: auto;
        }

        .sidebar{
            display: flex;
            justify-content: flex-end;
            margin-left: auto;
        }
        #loginButton {
            margin-left: auto;
        }

        .logo {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 23px;
            display: flex;
            align-items: center;
        }

            .logo .icon {
                width: 40px;
                height: 40px;
                background-color: #007bff;
                display: flex;
                justify-content: center;
                align-items: center;
               /*  color: white; */
                border-radius: 10px;
                margin-right: 10px;
                font-size: 24px;
            }

            .logo .text {
                display: flex;
                align-items: center;
            }

                .logo .text .vehical {
                    color: black
                    margin-right: 5px;
                }

                .logo .text .rental {
                    color: #007bff;
                }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VehicalRental</a> *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="logo">
                        <div class="icon">VR</div>
                        <div class="text">
                            <span class="vehical">Vehicle</span><span class="rental">Rental</span>
                        </div>
                    </div>
                </a>

                @if (ViewContext.RouteData.Values["controller"].ToString() != "Home" &&
                (ViewContext.RouteData.Values["action"].ToString() != "Login"&&
                ViewContext.RouteData.Values["action"].ToString() != "Register" 
                ))
                {
                    <button class="btn" onclick="logout()">Logout</button>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  @*   <footer class="border-top footer text-muted" style="height: 10px;">
        <div class="container" style="line-height: 30px;">
            &copy; 2024 - VehicalRentalSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>

        function toggleSlideBar() {
            var slideBar = document.getElementById('slideBar');
            var drawerIcon = document.querySelector('.drawer-icon');
            slideBar.style.left = slideBar.style.left === '0px' ? '-250px' : '0px';
            drawerIcon.classList.toggle('open');
        }
        function login() {
            window.location.href = '@Url.Action("Login", "User")';
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>





