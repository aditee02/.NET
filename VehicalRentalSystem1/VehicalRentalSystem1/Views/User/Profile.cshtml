@model User

@{
    ViewBag.Title = "User Profile";
    var UserImage = ViewData["Item"];
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VehicleRental - User Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #e9ecef;
            color: #495057;
        }

        .navbar {
            background-color: #343a40;
            padding: 10px 20px;
            color: white;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .navbar h1 {
                margin: 0;
                font-size: 24px;
            }

        .slide-bar {
            width: 250px;
            height: 100%;
            position: fixed;
            top: 0;
            left: -250px;
            background-color: #495057;
            transition: left 0.3s ease;
            z-index: 1000;
            padding-top: 125px;
            color: white;
        }

            .slide-bar a {
                display: block;
                padding: 15px 20px;
                text-decoration: none;
                color: white;
                transition: background-color 0.3s ease;
            }

                .slide-bar a:hover {
                    background-color: #6c757d;
                }

        .drawer-icon {
            position: fixed;
            top: 90px;
            left: 20px;
            z-index: 2000;
            cursor: pointer;
        }

            .drawer-icon span {
                display: block;
                width: 30px;
                height: 3px;
                background-color: grey;
                margin-bottom: 5px;
                transition: transform 0.3s ease;
            }

            .drawer-icon.open span:nth-child(1) {
                transform: rotate(-45deg) translate(-5px, 6px);
            }

            .drawer-icon.open span:nth-child(2) {
                opacity: 0;
            }

            .drawer-icon.open span:nth-child(3) {
                transform: rotate(45deg) translate(-5px, -6px);
            }

        .container {
            max-width: 800px;
            margin: 60px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 20px;
        }

        .profile-info {
            margin-bottom: 20px;
        }

            .profile-info label {
                font-weight: bold;
                color: #343a40;
            }

            .profile-info p {
                margin: 5px 0;
                font-size: 18px;
            }

        .profile-image {
            display: block;
            margin: 0 auto 20px;
            max-width: 200px;
            height: auto;
            border-radius: 50%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        media (max-width: 768px) {
            .container

        {
            margin: 20px;
            padding: 20px;
        }

        .profile-info p {
            font-size: 16px;
        }

        }

        /* Additional Styling */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .add-vehicle-btn-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .add-vehicle-btn {
            margin-right: 10px;
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .add-vehicle-btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>

<body>

    <div class="navbar">
        <div class="drawer-icon" onclick="toggleSlideBar()">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <h1>VehicleRental</h1>
    </div>

    <div class="slide-bar" id="slideBar">
        <a href="/User/Dashboard">Explore</a>
        <a href="/User/MyTrips">My Trips</a>
        <a href="/User/RentEarn">Rent and Earn</a>
        <a href="/User/Profile">Profile</a>
    </div>

    <div class="container">
        <h1>User Profile</h1>
        <div class="profile-info">
            <img class="profile-image" src="@Model.GovermentDoc" alt="User Profile Image" />
            <p><label>Name:</label> <span id="Name">@Model.Name</span></p>
            <p><label>Email:</label> <span id="Email">@Model.Email</span></p>
            <p><label>Age:</label> <span id="Age">@Model.Age</span></p>
            <p><label>Username:</label> <span id="Username">@Model.Username</span></p>
            <p><label>Phone No:</label> <span id="PhoneNo">@Model.PhoneNo</span></p>
            <p><label>Address:</label> <span id="Address">@Model.Address</span></p>
        </div>
        @* <a href="/User/EditProfile" class="btn">Edit Profile</a>
        <a href="/User/EditProfile" class="btn">Delete Profile</a> *@

        <div class="btn-group">
        <form action="@Url.Action("DeleteProfile", "User")" method="post">
            <input type="hidden" name="id" value="@Model.UserId" />
                <button type="submit" class="add-vehicle-btn" onclick="return myFunction()">Delete</button>
        </form>
        <form action="@Url.Action("UpdateProfile", "User")" method="get">
            <input type="hidden" name="id" value="@Model.UserId" />
            <button type="submit" class="add-vehicle-btn">Update</button>
        </form>
        </div>
    </div>

    <script>
        function toggleSlideBar() {
            var slideBar = document.getElementById('slideBar');
            var drawerIcon = document.querySelector('.drawer-icon');
            slideBar.style.left = slideBar.style.left === '0px' ? '-250px' : '0px';
            drawerIcon.classList.toggle('open');
        }
        function myFunction() {
            var confirmation = confirm("Are you sure you want to delete this Profile?");
            return confirmation;
        }
        function logout() {
            window.location.href = '@Url.Action("Logout", "User")';
        }
    </script>
</body>

</html>